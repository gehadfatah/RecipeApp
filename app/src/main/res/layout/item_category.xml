<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@drawable/rounded_bottom_sheet"
    android:layout_margin="4dp"

    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/card_view_item_category"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_53sdp"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view_item_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            tools:srcCompat="@tools:sample/avatars" />
    </FrameLayout>

    <TextView
        android:id="@+id/text_view_item_category_name_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingHorizontal="2dp"
        android:paddingBottom="16dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="@string/beef"
        android:textColor="@color/black1"
        android:textSize="16sp"
        android:fontFamily="@font/gilroy_regular"
        app:layout_constraintLeft_toLeftOf="@+id/card_view_item_category"
        app:layout_constraintRight_toRightOf="@+id/card_view_item_category"
        app:layout_constraintTop_toBottomOf="@+id/card_view_item_category" />

</androidx.constraintlayout.widget.ConstraintLayout>